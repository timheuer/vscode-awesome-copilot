{
  "name": "awesome-copilot",
  "displayName": "Awesome Copilot",
  "publisher": "timheuer",
  "author": {
    "name": "Tim Heuer"
  },
  "bugs": {
    "url": "https://github.com/timheuer/vscode-awesome-copilot/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/timheuer/vscode-awesome-copilot"
  },
  "qna": "https://github.com/timheuer/vscode-awesome-copilot/issues",
  "homepage": "https://github.com/timheuer/vscode-awesome-copilot",
  "description": "Browse and download instructions, prompts, and chat modes from the Awesome Copilot community",
  "version": "0.0.0-placeholder",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.103.0"
  },
  "badges": [
    {
      "url": "https://img.shields.io/visual-studio-marketplace/v/timheuer.vscode-awesome-copilot?label=VS%20Code%20Marketplace&color=brightgreen&logo=visualstudiocode",
      "href": "https://marketplace.visualstudio.com/items?itemName=TimHeuer.vscode-awesome-copilot",
      "description": "Current Version"
    },
    {
      "url": "https://github.com/timheuer/vscode-awesome-copilot/actions/workflows/build.yaml/badge.svg",
      "href": "https://github.com/timheuer/vscode-awesome-copilot/actions/workflows/build.yaml",
      "description": "Build Status"
    }
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:awesomeCopilotExplorer"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Awesome Copilot",
      "properties": {
        "awesome-copilot.repositories": {
          "type": "array",
          "title": "Repositories",
          "description": "Configure GitHub repositories as content sources",
          "default": [
            {
              "owner": "github",
              "repo": "awesome-copilot",
              "label": "Awesome Copilot"
            }
          ],
          "items": {
            "type": "object",
            "properties": {
              "owner": {
                "type": "string",
                "description": "Repository owner"
              },
              "repo": {
                "type": "string",
                "description": "Repository name"
              },
              "label": {
                "type": "string",
                "description": "Display name (optional)"
              },
              "baseUrl": {
                "type": "string",
                "description": "GitHub Enterprise URL (optional)"
              }
            }
          },
          "scope": "application"
        },
        "awesome-copilot.enterpriseToken": {
          "type": "string",
          "default": "",
          "description": "Personal Access Token for GitHub Enterprise authentication",
          "scope": "application",
          "markdownDescription": "Required permissions: `repo`, `read:org`, `read:user`  \nCreate at: your-github-enterprise.com/settings/tokens"
        },
        "awesome-copilot.cacheTimeout": {
          "type": "number",
          "default": 3600000,
          "minimum": 60000,
          "maximum": 86400000,
          "description": "Cache duration in milliseconds (default: 1 hour)",
          "scope": "application"
        },
        "awesome-copilot.autoRefresh": {
          "type": "boolean",
          "default": false,
          "description": "Automatically refresh content on VS Code startup",
          "scope": "application"
        },
        "awesome-copilot.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting",
          "scope": "application"
        },
        "awesome-copilot.showTreeView": {
          "type": "boolean",
          "default": true,
          "description": "Show/hide the Awesome Copilot tree view in the Explorer panel",
          "scope": "application"
        },
        "awesome-copilot.allowInsecureEnterpriseCerts": {
          "type": "boolean",
          "default": false,
          "description": "⚠️ SECURITY WARNING: Allow insecure certificates for Enterprise GitHub servers. Only enable this for trusted enterprise environments with self-signed certificates.",
          "scope": "application",
          "markdownDescription": "**⚠️ SECURITY WARNING:** This setting disables TLS certificate validation for Enterprise GitHub servers only. Only enable for trusted enterprise environments with self-signed certificates.  \n\n**Default: `false` (secure)**  \n\n**Note:** If you're getting certificate errors with enterprise GitHub, enable this temporarily to add your repository, then you can disable it again for better security."
        }
      }
    },
    "commands": [
      {
        "command": "awesome-copilot.refreshAwesomeCopilot",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "awesome-copilot.downloadItem",
        "title": "Download",
        "icon": "$(cloud-download)"
      },
      {
        "command": "awesome-copilot.previewItem",
        "title": "Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "awesome-copilot.manageSources",
        "title": "Awesome Copilot: Manage Sources",
        "icon": "$(repo)"
      },
      {
        "command": "awesome-copilot.removeRepo",
        "title": "Remove Repository",
        "icon": "$(trash)"
      },
      {
        "command": "awesome-copilot.refreshRepo",
        "title": "Refresh Repository",
        "icon": "$(refresh)"
      },
      {
        "command": "awesome-copilot.configureEnterpriseToken",
        "title": "Awesome Copilot: Configure Enterprise Token",
        "icon": "$(key)"
      },
      {
        "command": "awesome-copilot.clearEnterpriseToken",
        "title": "Awesome Copilot: Clear Enterprise Token",
        "icon": "$(trash)"
      },
      {
        "command": "awesome-copilot.toggleTreeView",
        "title": "Awesome Copilot: Toggle Tree View",
        "icon": "$(eye)"
      },
      {
        "command": "awesome-copilot.showTreeView",
        "title": "Awesome Copilot: Show Tree View",
        "icon": "$(eye)"
      },
      {
        "command": "awesome-copilot.hideTreeView",
        "title": "Awesome Copilot: Hide Tree View",
        "icon": "$(eye-closed)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "awesomeCopilotExplorer",
          "name": "Awesome Copilot",
          "when": "config.awesome-copilot.showTreeView",
          "icon": "$(copilot)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "awesome-copilot.refreshAwesomeCopilot",
          "when": "view == awesomeCopilotExplorer",
          "group": "navigation"
        },
        {
          "command": "awesome-copilot.manageSources",
          "when": "view == awesomeCopilotExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "awesome-copilot.downloadItem",
          "when": "view == awesomeCopilotExplorer && viewItem == copilotFile",
          "group": "inline@1"
        },
        {
          "command": "awesome-copilot.previewItem",
          "when": "view == awesomeCopilotExplorer && viewItem == copilotFile",
          "group": "inline@2"
        },
        {
          "command": "awesome-copilot.refreshRepo",
          "when": "view == awesomeCopilotExplorer && viewItem == copilotRepo",
          "group": "inline@1"
        },
        {
          "command": "awesome-copilot.removeRepo",
          "when": "view == awesomeCopilotExplorer && viewItem == copilotRepo",
          "group": "1_repo@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "nerdbank-gitversioning": "^3.6.133"
  },
  "dependencies": {
    "axios": "^1.11.0"
  }
}